{% extends 'back.html.twig' %}
{% block title %}Abonnement{% endblock %}

{% block body %}
    <h1>Abonnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonnement.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ abonnement.type }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ abonnement.prix }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ abonnement.dateDebut ? abonnement.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ abonnement.dateFin ? abonnement.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ abonnement.etat }}</td>
            </tr>
            <tr>
               <th>Adhérent</th>
<td>{{ abonnement.idAdherent is not null ? abonnement.idAdherent.id : 'Non associé' }}</td>

            </tr>
            <tr>
              <th>Bilan Financier</th>
<td>{{ abonnement.idBilanFinancier is not null ? abonnement.idBilanFinancier.id : 'Non associé' }}</td>

            </tr>
        </tbody>
    </table>

   
    <div class="btn-group" role="group" aria-label="Action Buttons">
        <a href="{{ path('app_abonnement_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
        <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}" class="btn btn-primary">
            <i class="fas fa-pencil-alt"></i> Éditer
        </a>
        {{ include('abonnement/_delete_form.html.twig') }}
    </div>
{% endblock %}
