{{ form_start(form) }}
    {{ form_row(form.type) }}
    <div>
        {{ form_label(form.prix, 'Prix') }}
        {{ form_widget(form.prix) }}
    </div>
    {{ form_row(form.dateDebut) }}
    {{ form_row(form.dateFin) }}
    {{ form_row(form.etat) }}

    {{ form_row(form.idAdherent) }}
    {{ form_row(form.idBilanFinancier) }}

    <button class="btn">{{ button_label|default('sauvegarder') }}</button>
{{ form_end(form) }}

{% if form_errors(form.prix) %}
    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
        Le prix doit être un nombre positif et supérieur à zéro.
    </div>
{% endif %}