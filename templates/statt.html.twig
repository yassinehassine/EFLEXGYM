{% extends 'back.html.twig' %}
{% block title %}<h1>Category Statistics</h1>{% endblock %}
{% block t %}statistique en produit type{% endblock %}
{% block content %}

<canvas id="categoryChart" width="400" height="400"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    // Your Chart.js code here
    // Data for the chart
    var categories = [];
    var productCounts = [];
    {% for categoryStat in categoryStatistics %}
        categories.push('{{ categoryStat.category }}');
        productCounts.push({{ categoryStat.product_count|default(0) }}); // Ensure only integer values are passed
    {% endfor %}
    // Create the chart
    var ctx = document.getElementById('categoryChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'pie', // Change the chart type to pie
        data: {
            labels: categories,
            datasets: [{
                label: 'Product Count',
                data: productCounts,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                    // Add more colors if needed
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                    // Add more colors if needed
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true
        }
    });
});
</script>
{% endblock %}
