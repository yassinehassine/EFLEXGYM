{% extends 'back.html.twig' %}

{% block title %}ProgrammePersonnalise{% endblock %}

{% block body %}
<style>
    .back-link {
        color: #007bff;
        /* Change color to your preferred color */
        text-decoration: none;
        /* Remove default underline */
        font-size: 24px;
        /* Adjust font size as needed */
        margin-right: 10px;
        /* Add some margin to the right */
    }
</style>
<div class="container">
    <a href="{{ path('app_programme_personnalise_index') }}" class="back-link">
        <i class="fa-solid fa-arrow-left"></i>
    </a>
    <div class="d-flex align-items-center">
        <h1>Programme Personnalise nÂ°{{ programme_personnalise.id }}</h1>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programme_personnalise.id }}</td>
            </tr>
            <tr>
                <th>Objectif</th>
                <td>{{ programme_personnalise.objectif }}</td>
            </tr>

            <tr>
                <th>Exercices</th>
                <td>
                    <ul>
                        {% for exercice in programme_personnalise.exercices %}

                        <li>{{ exercice.nom }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>


    <div class="row">
        <div class="col-auto">
            <a class="btn btn-success"
                href="{{ path('app_programme_personnalise_edit', {'id': programme_personnalise.id}) }}">
                <i class="fa-solid fa-pen-to-square"></i>
            </a>
        </div>
        <div class="col-auto">
            {{ include('programme_personnalise/_delete_form.html.twig') }}
        </div>
    </div>
    {% endblock %}