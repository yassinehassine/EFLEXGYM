<style>
    .error-message {
        color: red;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'class': 'form','novalidate': 'novalidate'}}) }}
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                <div class="error-message">
                {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                <div class="error-message">
                {{ form_errors(form.prenom) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.age) }}
                {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                <div class="error-message">
                {{ form_errors(form.age) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.taille) }}
                {{ form_widget(form.taille, {'attr': {'class': 'form-control'}}) }}
                <div class="error-message">
                {{ form_errors(form.taille) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.poids) }}
                {{ form_widget(form.poids, {'attr': {'class': 'form-control'}}) }}
                <div class="error-message">
                {{ form_errors(form.poids) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.tourDeTaille) }}
                {{ form_widget(form.tourDeTaille, {'attr': {'class': 'form-control'}}) }}
                <div class="error-message">
                {{ form_errors(form.tourDeTaille) }}
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-auto">
                        {{ form_label(form.sexe, null, {'label_attr': {'class': 'control-label'}}) }}
                    </div>
                    <div class="col-auto">
                        {% for child in form.sexe %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="error-message">
                {{ form_errors(form.sexe) }}
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
