{% extends 'front.html.twig' %}

{% block title %}
	<title>Gym | Profile</title>
{% endblock %}

{% block css %}
	{{ parent() }}

	<style>
		/* Custom styles for the profile page */
		.profile-table {
			width: 100%;
			border-collapse: collapse;
		}
		.profile-table th,
		.profile-table td {
			padding: 12px 15px;
			text-align: left;
			border-bottom: 1px solid #e0e0e0;
		}
		.profile-table th {
			background-color: #f2f2f2;
			font-weight: bold;
		}
		.profile-table tbody tr:nth-child(even) {
			background-color: #f9f9f9;
		}
	</style>
{% endblock %}

{% block body %}
	<div
		class="container-xl px-4 mt-4">
		<!-- Account page navigation-->

		<hr class="mt-0 mb-4">
		<div class="row">
			<div
				class="col-xl-4">
				<!-- Profile picture card-->
				<div class="card mb-4 mb-xl-0">
					<div class="card-header">Profile Picture</div>
					<div
						class="card-body text-center">
						<!-- Profile picture image-->
						<img
						class="img-account-profile rounded-circle mb-2" src="{{ asset('uploads/photos/' ~ user.photo) }}" alt="User Photo">
						<!-- Profile picture help block-->
						
					</div>
				</div>
			</div>
			<div
				class="col-xl-8">
				<!-- Account details card-->
				<div class="card mb-4">
					<div class="card-header">Account Details</div>
					<div class="card-body">
						<form>
							<!-- Form Group (username)-->
							<div class="mb-3">
								<label  class="small mb-1" for="inputUsername">Email</label>
								<input disabled class="form-control" id="inputUsername" type="text" placeholder="Enter your email" value="{{app.user.email}}">
							</div>
							<!-- Form Row-->
							<div
								class="row gx-3 mb-3">
								<!-- Form Group (first name)-->
								<div class="col-md-6">
									<label class="small mb-1" for="inputFirstName">First name</label>
									<input disabled class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name" value="{{app.user.name}}">
								</div>
								<!-- Form Group (last name)-->
								<div class="col-md-6">
									<label class="small mb-1" for="inputLastName">Last name</label>
									<input disabled class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" value="{{app.user.lastname}}">
								</div>
							</div>


							<!-- Form Row        -->
							<div
								class="row gx-3 mb-3">
								<!-- Form Group (organization name)-->
								<div class="col-md-6">
            <label class="small mb-1" for="inputGender">Gender</label>
            <select class="form-control" id="inputGender" disabled>
                <option selected disabled >Select Gender</option>
               <option value="male" {% if app.user.gender == 'male' %} selected {% endif %}>Male</option>
                <option value="female" {% if app.user.gender == 'female' %} selected {% endif %}>Female</option>
            </select>
        </div>
        <!-- Form Group (Birthdate)-->
        <div class="col-md-6">
            <label class="small mb-1" for="inputBirthdate">Birthdate</label>
            <input disabled class="form-control" id="inputBirthdate" value="{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}">
        </div>
							</div>
							<!-- Form Group (email address)-->
							
							<!-- Form Row-->
							<div
								class="row gx-3 mb-3">
								<!-- Form Group (phone number)-->
								
							<!-- Save changes button-->
							<button class="btn btn-primary" type="button" >Modifiy Profile</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block js %}
	{{ parent() }}
{% endblock %}
