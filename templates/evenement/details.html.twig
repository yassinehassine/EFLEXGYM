        <p><strong>Start Date:</strong> {{ evenement.dateDebut|date('Y-m-d') }}</p>
        <p><strong>End Date:</strong> {{ evenement.dateFin|date('Y-m-d') }}</p>
        <p><strong>Duration:</strong> {{ evenement.duration }}</p>
        <p><strong>Place:</strong> {{ evenement.place }}</p>

        {# Display weather data #}
        {% if weather %}
            <p><strong>Weather:</strong> {{ weather.condition.text }}</p>
